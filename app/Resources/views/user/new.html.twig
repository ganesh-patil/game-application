{% extends 'layout.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('/css/forms.css') }}" />
  {% endblock %}
{% block body %}
<div class="modal-dialog">
    <div class="loginmodal-container">
    <h1>Create new character</h1>

    {{ form_start(form) }}
       {#  {{ form_widget(form) }} #}
        <div class="form-group">

            {{ form_label(form.email, 'Email', {'label_attr': {'class': ''}}) }}
            <span class="required" style="color: red">*</span>
            
            {{ form_widget(form.email, {'attr': {'class': ''}})}}
            <div class="error">
            {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.characterName,  'Character name', {'label_attr': {'class': ''}}) }}
            <span class="required" style="color: red">*</span>
            
            {{ form_widget(form.characterName) }}
            <div class="error">
            {{ form_errors(form.characterName, {'attr': {'class': 'col-md-4'}}) }}
            </div>
        </div>
       
            
            <button type="submit" class="login loginmodal-submit">Create</button>
        
        
        
    {{ form_end(form) }}
    </div>
</div>
    
{% endblock %}
